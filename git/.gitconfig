[core]
	editor = nvim
  excludesfile = ~/.gitignore_global

[credential]
  helper = osxkeychain

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[commit]
	gpgsign = true

[merge]
	# Include summaries of merged commits in newly created merge commit messages
	log = true
[color]
  ui = true

[pull]
	rebase = false

[alias]
  aa = add -A
